byte led [7] = {2, 11, 10, 9, 6, 5, 3};
byte id = 0;
byte brightness = 0;
void setup() {
  Serial.begin(20000);
  
 for (int i = 0; i <= 6; i++)
    pinMode(led[i], OUTPUT);
}


void loop() {
  if (Serial.available() > 1) {
    digitalWrite(2,HIGH);
    id = Serial.read();
    brightness = Serial.read();
    analogWrite(led[id], brightness);
    }
    
    Serial.println('B');
    digitalWrite(2,LOW);

}
